
int counter;
int x = 20;
int y = 20;

void setup() {  //setup function 
  size(500, 600);
  }

void draw() {  //draw function loops 
 
    background(144); 
    fill(255,40,30);
    fill(220,255,0);
    ellipse(x,y,30,30);
 
    if (key == 'd'){
        x = x+ 1;
    }
 if (key == 'w'){
   y= y-1;
   }
 if (key == 's') {
 	y= y+1;
 }
 
 if (key == 'a') {
 	x = x -1;
 }
}
